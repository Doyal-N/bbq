.column.is-two-fifths.pr-3.mt-3
  .card
    header.card-header
      p.card-header-title.subtitle.is-4
        = link_to event.title, event_path(event)
    .card-image
      figure.image.is-4by3
        = image_pack_tag('event.jpg')
    .is-size-5.has-text-centered= event.address
    span.tag.is-primary.is-medium= l(event.datetime, format: :short)

    footer.card-footer
      =link_to t('.show'), event_path(event), class: 'card-footer-item card-color'
      - if current_user_can_edit?(event)
        =link_to t('.edit'), edit_event_path(event), class: 'card-footer-item card-color'
        =link_to t('.delete'), event_path(event), class: 'card-footer-item card-color has-background-danger has-text-black', \
          method: :delete, data: { confirm: t('.sure') }
